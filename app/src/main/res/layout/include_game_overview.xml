<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:showIn="@layout/fragment_game">

	<android.support.v7.widget.CardView
		style="@style/Card"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				style="@style/CardRow"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/game_rank"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="@style/Text.Subtitle"
					tools:text="#42 Board Game"/>

				<TextView
					android:id="@+id/game_types"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="@dimen/padding_standard"
					android:paddingTop="@dimen/padding_half"
					android:textAppearance="@style/Text.Secondary"
					android:visibility="gone"
					tools:text="#42 Board Game"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<LinearLayout
					android:id="@+id/ratings_root"
					style="@style/CardRow.Clickable"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/icon_rating"
						style="@style/Icon"
						android:src="@drawable/ic_rating"/>

					<LinearLayout
						style="@style/CardRowContent"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:orientation="vertical">

						<TextView
							android:id="@+id/game_rating"
							style="@style/RatingSmall"
							android:layout_width="64dp"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:textStyle="bold"
							tools:background="#088"
							tools:text="7.43"/>

						<TextView
							android:id="@+id/game_ratings_votes"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:maxLines="1"
							android:paddingTop="@dimen/padding_half"
							android:textAppearance="@style/Text.Secondary"
							android:textSize="12sp"
							tools:text="42,000 votes"/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/comments_root"
					style="@style/CardRow.Clickable"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/icon_comments"
						style="@style/Icon"
						android:src="@drawable/ic_comment"/>

					<TextView
						android:id="@+id/game_comments_label"
						style="@style/CardRowContent"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:maxLines="2"
						android:text="@string/title_comments"
						android:textAppearance="@style/Text"
						tools:text="1,234 comments"/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/icon_game_year_published"
						style="@style/Icon"
						android:src="@drawable/ic_calendar"/>

					<TextView
						android:id="@+id/game_year_published"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:textAppearance="@style/Text"
						android:textStyle="bold"
						tools:text="1996"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/icon_play_time"
						style="@style/Icon"
						android:src="@drawable/ic_time"/>

					<TextView
						android:id="@+id/play_time"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:textAppearance="@style/Text"
						tools:text="90 min"/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<LinearLayout
					android:id="@+id/number_of_players_root"
					style="@style/CardRow.Clickable"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/icon_number_of_players"
						style="@style/Icon"
						android:src="@drawable/ic_users"/>

					<TextView
						android:id="@+id/number_of_players"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:textAppearance="@style/Text"
						tools:text="3 - 5 players"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/player_age_root"
					style="@style/CardRow.Clickable"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/icon_player_age"
						style="@style/Icon"
						android:src="@drawable/ic_ages"/>

					<TextView
						android:id="@+id/player_age"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:textAppearance="@style/Text"
						tools:text="Ages 13+"/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<LinearLayout
					android:id="@+id/weight_root"
					style="@style/CardRow"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/icon_weight"
						style="@style/Icon"
						android:src="@drawable/ic_weight"/>

					<LinearLayout
						style="@style/CardRowContent"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">

						<TextView
							android:id="@+id/game_weight_message"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:maxLines="2"
							android:textAppearance="@style/Text"
							tools:text="Light"/>

						<TextView
							android:id="@+id/game_weight_score"
							style="@style/RatingSmall"
							android:layout_width="64dp"
							android:layout_height="wrap_content"
							android:gravity="center"
							tools:background="#088"
							tools:text="1.23"/>

						<TextView
							android:id="@+id/game_weight_votes"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:maxLines="1"
							android:textAppearance="@style/Text.Secondary"
							tools:text="42,000 votes"/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/language_dependence_root"
					style="@style/CardRow.Clickable"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/icon_language_dependence"
						style="@style/Icon"
						android:src="@drawable/ic_language"/>

					<LinearLayout
						style="@style/CardRowContent"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical">

						<TextView
							android:id="@+id/language_dependence_message"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:maxLines="2"
							android:textAppearance="@style/Text"
							tools:text="Unplayable in another language"/>

						<TextView
							android:id="@+id/language_dependence_score"
							style="@style/RatingSmall"
							android:layout_width="64dp"
							android:layout_height="wrap_content"
							android:gravity="center"
							tools:background="#088"
							tools:text="4.81"/>

						<TextView
							android:id="@+id/language_dependence_votes"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:maxLines="1"
							android:textAppearance="@style/Text.Secondary"
							tools:text="42,000 votes"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</android.support.v7.widget.CardView>
</merge>